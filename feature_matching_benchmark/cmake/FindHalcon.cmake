INCLUDE(FindPackageHandleStandardArgs)

FIND_PATH(HALCON_INCLUDE_DIRS 
  NAMES halconcpp/HalconCpp.h
  HINTS "$ENV{HALCON_INCLUDE_DIRS}" 
  PATHS $ENV{HALCONROOT}/include
)

FIND_LIBRARY(HALCON_LIBRARY
  NAMES halconcpp
  HINTS "$ENV{HALCON_LIBRARY}"
  PATHS $ENV{HALCONROOT}/lib/$ENV{HALCONARCH}
)

FIND_PACKAGE_HANDLE_STANDARD_ARGS(HALCON DEFAULT_MSG
  HALCON_INCLUDE_DIRS
  HALCON_LIBRARY)
  
  
#set(HALCON_INCLUDE_DIRS ${HALCONINCLUDE})
  
if(HALCON_FOUND)
get_filename_component(HALCON_LIBRARY_PATH ${HALCON_LIBRARY} PATH)
set(HALCON_LIBRARY_DIRS ${HALCON_LIBRARY_PATH})
set(HALCON_LIBRARIES "${HALCON_LIBRARY}")

message(STATUS ">> HALCON_INCLUDE_DIRS ${HALCON_INCLUDE_DIRS}")
message(STATUS ">> HALCON_LIBRARIES ${HALCON_LIBRARIES}")
message(STATUS ">> HALCON_LIBRARY_DIRS ${HALCON_LIBRARY_DIRS}")
endif(HALCON_FOUND)